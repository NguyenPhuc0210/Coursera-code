      padding: 10px;
      box-sizing: border-box;
    }

    .box img {
      width: 100%;
      height: auto;
    }

    /* Tablet View @ 772px */
    @media (min-width: 772px) {
      .box {
        width: 45vw;
        display: inline-block;
        vertical-align: top;
        margin: 10px;
      }

      .box img {
        max-height: 30vh;
        width: 100%;
        object-fit: cover;
      }
    }

    /* Large Screen View @ 998px */
    @media (min-width: 998px) {
      .box {
        width: 30vw;
      }
    }
  </style>
